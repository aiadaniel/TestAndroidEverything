<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_actionbar"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.vigorous.widget.RoundProgress
        android:id="@+id/round_progress"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <Button
        android:id="@+id/btn_test_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="testProgress"
        tools:ignore="HardcodedText"/>

    <com.vigorous.widget.PinPuView
        android:layout_width="50dp"
        android:layout_height="60dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"/>

    <com.vigorous.widget.PinPuView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="10dp"/>

    <ImageView
        android:id="@+id/gift_image_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/icon_flower"/>

</LinearLayout>
